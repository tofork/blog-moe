---
layout: none
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ site.title | xml_escape }}</title>
  <link href="{{ site.url | xml_escape }}{{ site.baseurl | xml_escape }}/feed.xml" rel="self"/>
  <link href="{{ site.url | xml_escape }}{{ site.baseurl | xml_escape }}/"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ site.url | xml_escape }}{{ site.baseurl | xml_escape }}/</id>
  <author>
    <name>{{ site.author.name | default: site.author | xml_escape }}</name>
  </author>
  {% assign public_posts = site.posts | where_exp: "post", "post.tags contains 'public'" %}
  {% for post in public_posts %}
  <entry>
    <title>{{ post.title | xml_escape }}</title>
    <link href="{{ post.url | absolute_url | xml_escape }}"/>
    <id>{{ post.id | xml_escape }}</id>
    <published>{{ post.date | date_to_xmlschema }}</published>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <summary type="html">{{ post.excerpt | xml_escape }}</summary>
    <content type="html">{{ post.content | xml_escape }}</content>
    {% for tag in post.tags %}
      <category term="{{ tag | xml_escape }}"/>
    {% endfor %}
    {% if post.author %}
      <author>
        <name>{{ post.author | xml_escape }}</name>
      </author>
    {% endif %}
  </entry>
  {% endfor %}
</feed>